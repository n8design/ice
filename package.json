{
  "name": "@n8d/ice",
  "version": "0.0.1",
  "description": "Contains all built chain an tool for hTWOo",
  "private": true,
  "workspaces": [
    "ice-*"
  ],
  "keywords": [
    "Ice",
    "Build",
    "Chain",
    "Tools",
    "hTWOo"
  ],
  "homepage": "https://github.com/n8design/ice#readme",
  "bugs": {
    "url": "https://github.com/n8design/ice/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n8design/ice.git"
  },
  "license": "MIT",
  "author": "Stefan Bauer",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "build:ice": "npm run build --workspace ice-build",
    "watch:ice": "npm run watch --workspace ice-build",
    "build:hotreloader": "npm run build --workspace ice-hotreloader",
    "watch:hotreloader": "npm run build --workspace ice-hotreloader",
    "build": "npm-run-all build:ice build:hotreloader",
    "watch": "npm-run-all watch:ice watch:hotreloader",
    "release": "nx release version",
    "release:publish": "nx release publish",
    "release:ice-build": "nx release version --projects=ice-build",
    "release:ice-hotreloader": "nx release version --projects=ice-hotreloader",
    "release:publish:ice-build": "nx release publish --project=ice-build",
    "release:publish:ice-hotreloader": "nx release publish --project=ice-hotreloader"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@nx/js": "^20.8.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "semantic-release-monorepo": "^8.0.2"
  }
}
