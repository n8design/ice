{
  "name": "ice-build",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run build",
        "cwd": "ice-build"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run lint",
        "cwd": "ice-build"
      }
    },
    "version": {
      "executor": "@nx/release:semantic-version",
      "dependsOn": ["lint", "build"],
      "options": {
        "preset": "conventional"
      }
    }
  }
}