{
  "name": "@n8d/ice-build",
  "version": "0.0.4-alpha.0",
  "type": "module",
  "private": false,
  "nx-release-publish": {
    "executor": "@nx/js:release-publish",
    "options": {
      "packageRoot": "ice-build",
      "publishable": true,
      "access": "public"
    }
  },
  "main": "build.ts",
  "bin": {
    "ice-build": "tsx ./bin/cli.js"
  },
  "files": [
    "bin",
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsx ./bin/cli.js --watch",
    "dev": "tsx ./bin/cli.js",
    "lint": "eslint ."
  },
  "dependencies": {
    "@eslint/js": "^9.21.0",
    "@n8d/ice-hotreloader": "^0.0.1-alpha.2",
    "@types/eslint": "^9.6.1",
    "autoprefixer": "^10.4.14",
    "chokidar": "^3.5.3",
    "esbuild": "^0.19.4",
    "esbuild-sass-plugin": "^2.16.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "glob": "^10.2.6",
    "postcss": "^8.4.24"
  },
  "devDependencies": {
    "@nx/eslint": "20.8.0",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "nx": "20.8.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "nx": {}
}
