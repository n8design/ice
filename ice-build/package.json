{
  "name": "@n8d/ice-build",
  "type": "module",
  "private": false,
  "license": "MIT",
  "nx-release-publish": {
    "executor": "@nx/js:release-publish",
    "options": {
      "packageRoot": "ice-build",
      "publishable": true,
      "access": "public"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "./dist/ice-build.js",
  "bin": {
    "ice-build": "./bin/cli.js"
  },
  "files": [
    "bin",
    "dist",
    "assets"
  ],
  "scripts": {
    "clean": "node -e \"if(require('fs').existsSync('dist')) require('fs').rmSync('dist', {recursive:true, force:true})\"",
    "build:tsc": "tsc --outDir dist --declaration true",
    "build:esbuild": "esbuild ./src/ice-build.ts --bundle --outfile=dist/ice-build.js --platform=node --format=esm --external:chokidar --external:glob --external:esbuild-sass-plugin --external:@n8d/ice-hotreloader --external:jiti --external:autoprefixer --external:postcss --external:browserslist --external:esbuild --external:eslint --external:typescript",
    "build": "npm run clean && npm run build:esbuild",
    "watch": "node ./bin/cli.js --watch",
    "dev": "node ./bin/cli.js",
    "lint": "eslint .",
    "test": "vitest run --coverage",
    "test:integration": "bash ./test/integration/build-success.sh"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "esbuild-sass-plugin": "^3.3.1",
    "fraction.js": "^4.3.7",
    "glob": "^11.0.1"
  },
  "peerDependencies": {
    "@eslint/config-array": "^0.20.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.0",
    "@eslint/plugin-kit": "^0.2.8",
    "@n8d/ice-hotreloader": "workspace:^",
    "autoprefixer": "^10.4.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.0.0 || ^9.0.0",
    "postcss": "^8.4.0",
    "typescript": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "autoprefixer": {
      "optional": true
    },
    "eslint": {
      "optional": true
    },
    "@eslint/config-array": {
      "optional": true
    },
    "@eslint/eslintrc": {
      "optional": true
    },
    "@eslint/js": {
      "optional": true
    },
    "@eslint/plugin-kit": {
      "optional": true
    },
    "postcss": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/config-array": "^0.20.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.0",
    "@eslint/plugin-kit": "^0.2.8",
    "@n8d/ice-hotreloader": "^0.0.1-alpha.14",
    "@nx/eslint": "20.8.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitest/coverage-v8": "^3.1.2",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.2",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "nx": "20.8.0",
    "postcss": "^8.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.4.5",
    "vitest": "^3.1.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/n8design/ice.git"
  },
  "nx": {},
  "vitest": {
    "globals": true,
    "environment": "node",
    "coverage": {
      "provider": "v8",
      "reporter": [
        "text",
        "json",
        "html"
      ]
    }
  },
  "version": "0.0.4-alpha.50"
}
