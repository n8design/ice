{
  "name": "@n8d/ice-build",
  "type": "module",
  "private": false,
  "license": "MIT",
  "nx-release-publish": {
    "executor": "@nx/js:release-publish",
    "options": {
      "packageRoot": "ice-build",
      "publishable": true,
      "access": "public"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "version": "0.8.0",
  "bin": {
    "ice-build": "./dist/bin/ice-build.js"
  },
  "files": [
    "dist",
    "assets"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "test": "vitest run",
    "test:integration": "node tests/integration/run.js",
    "prepublishOnly": "npm run build",
    "changelog": "node scripts/release.js"
  },
  "dependencies": {
    "@n8d/ice-hotreloader": "0.1.0",
    "autoprefixer": "^10.4.22",
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "commander": "^14.0.2",
    "esbuild": "^0.27.0",
    "glob": "^13.0.0",
    "lodash.debounce": "^4.0.8",
    "path-scurry": "^2.0.1",
    "postcss": "^8.5.6",
    "sass": "^1.94.2"
  },
  "devDependencies": {
    "@types/estree": "^1.0.8",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^22.19.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/n8design/ice.git"
  },
  "nx": {},
  "vitest": {
    "globals": true,
    "environment": "node",
    "setupFiles": [
      "./vitest.setup.js"
    ],
    "coverage": {
      "provider": "v8",
      "reporter": [
        "text",
        "json",
        "html"
      ]
    }
  }
}
