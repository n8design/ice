{
  "name": "@n8d/ice-hotreloader",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js",
      "require": "./dist/client/index.js"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.min.js",
      "require": "./dist/browser.min.js"
    }
  },
  "scripts": {
    "build": "npm run build:node && npm run build:browser",
    "build:node": "tsc",
    "build:browser": "esbuild src/browser.ts --bundle --minify --sourcemap --outfile=dist/browser.min.js --format=iife --target=es2020",
    "lint": "eslint .",
    "test": "vitest run",
    "test:integration": "echo 'Integration tests not implemented yet' && exit 0",
    "test:watch": "vitest"
  },
  "files": [
    "dist",
    "assets"
  ],
  "keywords": [
    "patternlab",
    "hmr",
    "hot-reload"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/n8design/ice.git"
  },
  "dependencies": {
    "vitest": "^3.2.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "@types/ws": "^8.5.14",
    "esbuild": "^0.27.0",
    "typescript": "^5.9.3"
  },
  "nx-release-publish": {
    "executor": "@nx/js:release-publish",
    "options": {
      "packageRoot": "ice-hotreloader",
      "publishable": true,
      "access": "public"
    }
  }
}
