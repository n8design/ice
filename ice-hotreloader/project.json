{
  "name": "ice-hotreloader",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run build",
        "cwd": "ice-hotreloader"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run lint",
        "cwd": "ice-hotreloader"
      }
    },
    "version": {
      "executor": "@nx/release:semantic-version",
      "options": {
        "preset": "conventional",
        "trackDeps": false,
        "push": true,
        "skipCommitTypes": ["chore", "docs"],
        "changelogHeader": "# Changelog",
        "releaseTagPattern": "{projectName}@{version}",
        "commitMessageFormat": "chore(release): {projectName}@{version} [skip ci]",
        "github": {
          "release": false
        },
        "git": {
          "commit": true,
          "tag": true,
          "push": true
        },
        "changelog": {
          "create": true,
          "file": "CHANGELOG.md",
          "scopes": ["ice-hotreloader"]
        },
        "commits": {
          "include": ["**/ice-hotreloader/**"],
          "filter": [
            "ice-hotreloader",
            "ice-hotreloader/**",
            "ice-hotreloader/**/*"
          ]
        }
      }
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["build"],
      "options": {
        "packageRoot": "ice-hotreloader",
        "publishable": true,
        "access": "public"
      }
    }
  }
}